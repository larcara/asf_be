= form_for @job do |f|
  - if @job.errors.any?
    #error_explanation
      %h2= "#{pluralize(@job.errors.count, "error")} prohibited this job from being saved:"
      %ul
        - @job.errors.full_messages.each do |msg|
          %li= msg
  .row=select_tag :import, options_for_select(%W{KlikkaPromo RisparmioSuper})
  .row=number_field_tag :from
  .row=number_field_tag :to

  .actions
    = f.submit 'Save'
